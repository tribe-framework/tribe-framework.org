{{page-title "Auth"}}

<main class="vh-100 w-100 d-flex align-items-center justify-content-center">
  <form class="col-10 col-md-7 col-lg-4 col-xxl-3 text-center">
    <h1 class="mb-5"><img src="/favicon.png" height="112" width="112" class="rounded-3" /></h1>

    <div class="form-floating mb-4">
      <Input @type="password" @value={{this.auth.inputPassword}} class="form-control border-dark border border-1" id="floatingPassword" placeholder="Password" @enter={{this.auth.checkPassword}} />
      <label for="floatingPassword">Password</label>
    </div>

    <button class="w-100 btn btn-lg btn-outline-dark" type="button" {{on 'click' this.auth.checkPassword}}>Sign in</button>
  </form>
</main>

{{outlet}}