<div id="{{@notification.uniqid}}" class="toast" role="alert" aria-live="assertive" aria-atomic="true" data-bs-autohide="false" {{did-insert this.notify}}>
	<div class="toast-header">
	  <img src="/favicon.png" width="32" class="rounded me-2" alt="Image for {{@notification.message}}">
	  <strong class="me-auto">Bootstrap</strong>
	  <small>11 mins ago</small>
	  <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
	</div>
	<div class="toast-body">
	  {{@notification.message}}
	</div>
</div>